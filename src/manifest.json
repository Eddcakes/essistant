{
  "name": "Essistant",
  "description": "Helpful tools",
  "version": "1.0",
  "manifest_version": 3,
  "permissions": ["activeTab", "scripting", "storage"],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "/images/essistant16.png",
      "32": "/images/essistant32.png"
    }
  },
  "icons": {
    "16": "/images/essistant16.png",
    "32": "/images/essistant32.png"
  },
  "content_scripts": [
    {
      "css": ["essistant.css"],
      "matches": ["https://drive.google.com/*"]
    }
  ]
}
